<h1>Franchises</h1>
<div>
    <a href="/client/update">Update</a>
    <a href="/client/add">Add</a>
    <a href="/client/delete/{{id}}">Delete</a> 

  <div class="row select"id="filt">
    <div class="col-md-12">
      
      <select id="status_type" class="col-sm-6" name="status" onchange="selectStatus(this.value)">
        <option name="status" value="Active">Active</option>
        <option name="status" value="Inactive">Inactive</option>
        <option name="status" value="Pending">Pending</option>
        <option name="status" value="Cancelled">Cancelled</option>
      </select>
      <span class="col-sm-6">
        {{!-- <button type="button" class="btn btn-danger btn-lg"id="move">SortRecords</button> --}}
    <a href="/SortRecords"><button type="button"class="btn btn-danger btn-lg"id="move">SortRecords</button></a>

      </span>
      
    </div>
  </div>
  
  <div class="row">
    <div class="displayStatus">
        {{#each clients}}
         <div class="display">
          {{client}}
          </div>
        {{/each}}
    </div>
  </div>
  </div>

<script>
  function status_type(value) {
    location.href = '/filter/' + value;
  }
</script>
 
<table class="col-lg-12 table table-primary">
  <tr>
    <th>province_name</th>
    <th>Contact Details</th>
    <th>Branch</th>
    <th>Address</th>
    <th>Email Address</th>
    <th>Postal Code</th>
    <th>Business Tell</th>
    <th>Cell</th>
    <th></th>
  </tr>
  {{#client}}
  <tr>
    <td>
      {{province_name}}
    </td>
    <td>
      {{contact_details}}
    </td>
    
    <td>
      {{branch}}
    </td>
    <td>
      {{address}}
    </td>
    <td>
      {{email_address}}
    </td>
       <td>
      {{postal_code}}
    </td>
    
    <td>
      {{business_tell}}
    </td>
    <td>
      {{cell}}
    </td>
     
    {{/client}}
  </tr>
</table>

